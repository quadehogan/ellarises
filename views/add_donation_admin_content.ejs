<div class="container my-5" style="max-width: 600px;">

    <h1 class="mb-4">New Donation</h1>

    <form action="/donations/add" method="POST">

        <div class="mb-3">
            <label class="form-label">Donation Amount</label>
            <input type="number" step="0.01" class="form-control" name="DonationAmount" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Participant ID</label>
            <input type="text" class="form-control" name="Participant_ID">
        </div>

        <div class="mb-3">
            <label class="form-label">Donation Date</label>
            <input type="date" class="form-control" name="DonationDate">
        </div>

        <button type="submit" class="custom-btn">Add Donation</button>
        <a href="/donations" class="btn btn-secondary ms-3">Cancel</a>

    </form>
</div>
