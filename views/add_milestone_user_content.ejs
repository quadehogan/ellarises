<h2 class="mb-4">Add Milestone</h2>

<form action="/milestone/add" method="POST">

    <!-- Participant_ID (hidden, user cannot change it) -->
    <input type="hidden" name="Participant_ID" value="<%= participant.Participant_ID %>">

    <!-- Title -->
    <div class="mb-3">
        <label class="form-label">Milestone Title</label>
        <input type="text" name="MilestoneTitle" class="form-control" required>
    </div>

    <!-- Date -->
    <div class="mb-3">
        <label class="form-label">Milestone Date</label>
        <input type="date" name="MilestoneDate" class="form-control" required>
    </div>

    <button class="custom-btn mt-3">Add Milestone</button>
    <a href="/profile/<%= participant.Participant_ID %>" class="btn btn-secondary ms-3">Cancel</a>

</form>