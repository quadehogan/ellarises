<h2 class="mb-4">Add Milestone</h2>

<form action="/milestone/add" method="POST">

    <!-- Participant_ID (readonly) -->
    <div class="mb-3">
        <label class="form-label">Participant ID</label>
        <input type="text" name="Participant_ID" class="form-control" value="<%= participant.Participant_ID %>" readonly>
    </div>

    <!-- Title (editable on add) -->
    <div class="mb-3">
        <label class="form-label">Milestone Title</label>
        <input type="text" name="MilestoneTitles" class="form-control" required>
    </div>

    <!-- Date -->
    <div class="mb-3">
        <label class="form-label">Milestone Date</label>
        <input type="date" name="MilestoneDates" class="form-control" required>
    </div>

    <button class="custom-btn mt-3">Add Milestone</button>
    <a href="/profile/<%= participant.Participant_ID %>" class="btn btn-secondary ms-3">Cancel</a>

</form>