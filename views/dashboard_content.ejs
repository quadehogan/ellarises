<div class="container mt-5">

    <h2 class="mb-4 text-center">Member Milestones</h2>

    <% if (milestones && milestones.length > 0) { %>
        <!-- Search bar -->
        <div class="mb-3">
            <input type="text" id="searchInput" class="form-control" placeholder="Search by any field">
        </div>

        <div style="max-height: 400px; overflow-y: auto;">
            <table class="table table-striped table-bordered" id="participantTable">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Milestone Title</th>
                        <th>Milestone Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% milestones.forEach(milestone => { %>
                        <tr>
                            <td>
                                <%= milestone.ParticipantFirstName %>
                            </td>
                            <td>
                                <%= milestone.ParticipantLastName %>
                            </td>
                            <td>
                                <%= milestone.MilestoneTitle %>
                            </td>
                            <td>
                                <%= milestone.MilestoneDate %>
                            </td>
                            
                            <td>
                                <form action="/milestone/<%= milestone.Participant_ID %>/<%= encodeURIComponent(milestone.MilestoneTitle) %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this milestone?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="custom-btn">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

        <% } else { %>
            <div class="alert alert-info text-center">
                No milestones available.
            </div>
            <% } %>

                <!-- Add Milestone button (ADMIN ONLY) -->
                <% if (user && user.role === 'admin') { %>
                    <div class="mt-3 text-center">
                        <a href="/add_milestone_admin" class="btn btn-primary">Add Milestone</a>
                    </div>
                    <% } %>
</div>


