<header class="site-header">
    <h2 class="logo">Ella Rises</h2>

    <nav class="navbar">
        <!-- Home always on the left -->
        <a href="/">Home</a>

        <% if (!user) { %>
            <!-- NOT LOGGED IN -->
            <a href="/enroll">Enroll</a>

            <!-- PUBLIC DONATION PAGE -->
            <a href="/donate-public">Donations</a>

            <!-- PUBLIC EVENTS PAGE -->
            <a href="/events_nonverified">Events</a>

            <a href="/login">Login</a>

            <% } else { %>
                <!-- LOGGED IN USER -->

                <% if (user.role === "participant") { %>
                    <!-- PARTICIPANT ROLE -->
                    <a href="/donations">Donations</a>
                    <a href="/profile/<%= user.id %>">Profile</a>
                    <a href="/events_user/<%= user.id %>">Events</a>

                    <% } else if (user.role === "admin") { %>
                        <!-- ADMIN ROLE -->
                        <a href="/manage_dashboard">Management</a>
                        <% } %>

                            <!-- Logout always for logged-in users -->
                            <a href="/logout">Logout</a>
                            <% } %>
    </nav>
</header>