<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title><%= title %> | Ella Rises</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <!-- Header Include -->
    <%- include("partials/header") %>

    <main>
        <% if (typeof body !== 'undefined') { %>
            <%- body %> <!-- normal page content -->
        <% } %>
    </main>

    <!-- Footer Include -->
    <%- include("partials/footer") %>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
$(document).ready(function () {

    function createParticles() {
        if ($(".floating-bubbles").length > 0) {
            let gen = new ParticleGenerator(60, 40, 8, 100);
            gen.generate();
        }
    }

    createParticles();
});

// Generator class
class ParticleGenerator {
    constructor(count, maxSize, minSize, leftRange) {
        this.count = count;
        this.maxSize = maxSize;
        this.minSize = minSize;
        this.leftRange = leftRange;
    }

    generate() {
        for (let i = 0; i < this.count; i++) {
            let size = Math.floor(Math.random() * this.maxSize) + this.minSize;
            let left = Math.floor(Math.random() * this.leftRange);
            let delay = (Math.random() * 12).toFixed(2); // random delay in seconds

            $(".particles-wrapper .particles").append(`
                <span class="particle"
                    style="
                        width:${size}px;
                        height:${size}px;
                        left:${left}%;
                        animation-delay:${delay}s;
                    ">
                </span>
            `);
        }
    }
}
</script>
</body>
</html>



