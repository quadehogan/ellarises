<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title><%= title %> | Ella Rises</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <!-- Header Include -->
    <%- include("partials/header") %>

    <main>
        <% if (typeof body !== 'undefined') { %>
            <%- body %> <!-- normal page content -->
        <% } %>
    </main>

    <!-- Footer Include -->
    <%- include("partials/footer") %>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
$(document).ready(function () {
    // Generate particles for each container with .floating-bubbles
    $(".floating-bubbles").each(function () {
        const $container = $(this); // jQuery element for this specific container
        const gen = new ParticleGenerator(60, 40, 8, 100, $container); // 60 particles per container
        gen.generate();
    });
});

// Particle generator class
class ParticleGenerator {
    /**
     * @param {number} count - Number of particles to generate
     * @param {number} maxSize - Maximum size of a particle (px)
     * @param {number} minSize - Minimum size of a particle (px)
     * @param {number} leftRange - Maximum left offset percentage
     * @param {jQuery} container - jQuery element to append particles to
     */
    constructor(count, maxSize, minSize, leftRange = 100, container) {
        this.count = count;
        this.maxSize = maxSize;
        this.minSize = minSize;
        this.leftRange = leftRange;
        this.container = container;
    }

    generate() {
        for (let i = 0; i < this.count; i++) {
            const size = Math.floor(Math.random() * (this.maxSize - this.minSize + 1)) + this.minSize;
            const left = Math.random() * this.leftRange; // percentage of container width
            const delay = (Math.random() * 12).toFixed(2); // seconds

            this.container.append(`
                <span class="particle"
                    style="
                        width:${size}px;
                        height:${size}px;
                        left:${left}%;
                        animation-delay:${delay}s;
                    ">
                </span>
            `);
        }
    }
}
</script>
</body>
</html>



