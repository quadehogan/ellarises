<div class="container mt-5" style="max-width: 700px;">
  
  <h1 class="text-center mb-4">Edit Profile</h1>

  <form action="/profile/update" method="POST" class="card p-4 shadow-sm">
    <div class="mb-3">
      <label for="ParticipantID" class="form-label">Participant ID</label>
      <input type="text" class="form-control" id="ParticipantID" name="ParticipantID" readonly
             value="<%= participant.Participant_ID %>">
    </div>

    <div class="mb-3">
      <label for="ParticipantEmail" class="form-label">Email</label>
      <input type="email" class="form-control" id="ParticipantEmail" name="ParticipantEmail" required
             value="<%= participant.ParticipantEmail %>">
    </div>

    <div class="mb-3">
      <label for="ParticipantPassword" class="form-label">Password</label>
      <input type="password" class="form-control" id="ParticipantPassword" name="ParticipantPassword" required
             value="<%= participant.ParticipantPassword %>">
    </div>

    <div class="row">
      <div class="col-md-6 mb-3">
        <label for="ParticipantFirstName" class="form-label">First Name</label>
        <input type="text" class="form-control" id="ParticipantFirstName" name="ParticipantFirstName" required
               value="<%= participant.ParticipantFirstName %>">
      </div>

      <div class="col-md-6 mb-3">
        <label for="ParticipantLastName" class="form-label">Last Name</label>
        <input type="text" class="form-control" id="ParticipantLastName" name="ParticipantLastName" required
               value="<%= participant.ParticipantLastName %>">
      </div>
    </div>

    <div class="mb-3">
      <label for="ParticipantDOB" class="form-label">Date of Birth</label>
      <input type="date" class="form-control" id="ParticipantDOB" name="ParticipantDOB" required
             value="<%= participant.ParticipantDOB.toISOString().split('T')[0] %>">
    </div>

    <!-- Hidden ParticipantRole field -->
    <input type="hidden" name="ParticipantRole" value="<%= participant.ParticipantRole %>">

    <div class="mb-3">
      <label for="ParticipantPhone" class="form-label">Phone Number</label>
      <input type="text" class="form-control" id="ParticipantPhone" name="ParticipantPhone" required
             value="<%= participant.ParticipantPhone %>">
    </div>

    <div class="mb-3">
      <label for="ParticipantCity" class="form-label">City</label>
      <input type="text" class="form-control" id="ParticipantCity" name="ParticipantCity" required
             value="<%= participant.ParticipantCity %>">
    </div>

    <div class="row">
      <div class="col-md-6 mb-3">
        <label for="ParticipantState" class="form-label">State</label>
        <input type="text" class="form-control" id="ParticipantState" name="ParticipantState" required
               value="<%= participant.ParticipantState %>">
      </div>

      <div class="col-md-6 mb-3">
        <label for="ParticipantZIP" class="form-label">Zip Code</label>
        <input type="text" class="form-control" id="ParticipantZIP" name="ParticipantZIP" required
               value="<%= participant.ParticipantZIP %>">
      </div>
    </div>

    <div class="mb-3">
      <label for="ParticipantSchoolorEmployer" class="form-label">School or Employer</label>
      <input type="text" class="form-control" id="ParticipantSchoolorEmployer" name="ParticipantSchoolorEmployer" required
             value="<%= participant.ParticipantSchoolorEmployer %>">
    </div>

    <div class="mb-3">
      <label for="ParticipantFieldOfInterest" class="form-label">Field of Interest</label>
      <input type="text" class="form-control" id="ParticipantFieldOfInterest" name="ParticipantFieldOfInterest" required
             value="<%= participant.ParticipantFieldOfInterest %>">
    </div>

    <button type="submit" class="btn btn-primary w-100">Update Profile</button>

  </form>
</div>
