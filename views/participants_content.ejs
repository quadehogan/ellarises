<div class="container mt-5">

  <h1 class="mb-4">Participants</h1>

  <!-- Search Bar -->
  <div class="mb-3">
    <input type="text" id="searchInput" class="form-control" placeholder="Search participants...">
  </div>

  <!-- PARTICIPANTS SECTION -->
  <div style="max-height: 400px; overflow-y: auto;">
    <table class="table table-striped table-bordered" id="participantsTable">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Actions</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% if (participantsRaw && participantsRaw.length > 0) { %>
          <% participantsRaw.forEach(p => { %>
            <tr>
              <td><%= p.ParticipantFirstName %></td>
              <td><%= p.ParticipantLastName %></td>
              <td><%= p.ParticipantEmail %></td>
              <td><%= p.ParticipantPhone %></td>
              <td>
                <button class="custom-btn" onclick="window.location.href='/edit-participant/<%= p.Participant_ID %>'">Edit</button>
              </td>
              <td>
                <form action="/registration/<%= p.Participant_ID %>/<%= p.Event_ID %>/<%= encodeURIComponent(p.EventDateTimeStart) %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this registration?');">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="custom-btn">Delete</button>
                  </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="6" class="text-center">No participants found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <p><strong>Total Participants:</strong> <%= participantsRaw.length %></p>
</div>

<script>
  // SEARCH FUNCTION
  const searchInput = document.getElementById("searchInput");
  searchInput.addEventListener("input", function() {
    const filter = searchInput.value.toLowerCase();
    filterTable("participantsTable", filter);
  });

  function filterTable(tableId, filter) {
    const rows = document.querySelectorAll(`#${tableId} tbody tr`);
    rows.forEach(row => {
      const text = row.textContent.toLowerCase();
      row.style.display = text.includes(filter) ? "" : "none";
    });
  }
</script>
