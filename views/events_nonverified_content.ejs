<div class="container mt-5">
    <h2 class="mb-4 text-center">Upcoming Events</h2>

    <% if (!events || events.length === 0) { %>
        <div class="alert alert-info text-center">
            No upcoming events â€” check back soon!
        </div>
    <% } else { %>
        <!-- Events table wrapper -->
        <div class="events-table-wrapper mb-3" style="max-height: 400px; overflow-y: auto;">
            <table class="table table-striped table-bordered events-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Start Time</th>
                    </tr>
                </thead>
                <tbody>
                    <% events.forEach(event => { %>
                        <tr>
                            <td><%= event.EventName %></td>
                            <td><%= event.EventDescription %></td>
                            <td><%= new Date(event.EventDateTimeStart).toLocaleString() %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } %>
</div>

